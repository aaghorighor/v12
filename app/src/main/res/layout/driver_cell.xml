<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="@color/grey_10" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium_8"
        android:layout_marginLeft="@dimen/spacing_medium_8"
        android:layout_marginRight="@dimen/spacing_medium_8"
        android:visibility="visible"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_large"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/spacing_xlarge"
                    android:layout_height="@dimen/spacing_xlarge"
                    android:scaleType="fitCenter"
                    app:sriv_left_bottom_corner_radius="@dimen/spacing_xxlarge"
                    app:sriv_right_top_corner_radius="@dimen/spacing_xxlarge"
                    app:sriv_left_top_corner_radius="@dimen/spacing_xxlarge"
                    app:sriv_right_bottom_corner_radius="@dimen/spacing_xxlarge"
                    android:src="@drawable/blank"
                    app:sriv_oval="false" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/spacing_small"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="sssssssssss"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textColor="@color/indigo_900" />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/add_layout"
                    android:layout_width="48dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:tint="@color/grey_5"
                        app:srcCompat="@drawable/shape_circle" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:contentDescription="Add Operator"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_add" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sms_layout"
                    android:layout_width="48dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:tint="@color/grey_5"
                        app:srcCompat="@drawable/shape_circle" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:contentDescription="Sms"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_sms" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/phone_layout"
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:tint="@color/grey_5"
                        app:srcCompat="@drawable/shape_circle" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:contentDescription="phone"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_phone" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>